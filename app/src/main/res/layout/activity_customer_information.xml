<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#E3F2FD"
    android:layout_height="match_parent"
    tools:context="com.example.fatih.orderpizza.CustomerInformation">

    <TextView
        android:id="@+id/name"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textSize="24sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="94dp"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/address"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:text="Address:"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/name"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/telephone"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:text="Telephone:"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:text="Postal Code:"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/address"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/confirm"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Next: CheckOut"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="105dp"
        app:layout_constraintTop_toBottomOf="@+id/telephoneID" />


    <EditText
        android:id="@+id/nameID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="94dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintLeft_toRightOf="@+id/name"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp" />

    <EditText
        android:id="@+id/telephoneID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Telephone"
        app:layout_constraintLeft_toRightOf="@+id/telephone"
        app:layout_constraintTop_toBottomOf="@+id/postalcodeID"
        android:layout_marginStart="8dp" />

    <EditText
        android:id="@+id/postalcodeID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Postal Code"
        app:layout_constraintLeft_toRightOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/addressID"
        android:layout_marginStart="8dp" />

    <EditText
        android:id="@+id/addressID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Address"
        app:layout_constraintLeft_toRightOf="@+id/address"
        app:layout_constraintTop_toBottomOf="@+id/nameID"
        android:layout_marginStart="8dp" />

</android.support.constraint.ConstraintLayout>
