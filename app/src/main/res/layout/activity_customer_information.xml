<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/backgrounds"
    android:layout_height="match_parent"
    tools:context="com.example.fatih.orderpizza.CustomerInformation">

    <LinearLayout android:weightSum="1">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Please Enter Your Information"
            android:textAlignment="center"
            android:textSize="24sp"
            android:layout_weight="1" />
     />

    </LinearLayout>

    <TableLayout>

    <TableRow>
    <TextView
        android:id="@+id/nameData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textSize="20sp"
        />

        <EditText
            android:id="@+id/nameID"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName" />

</TableRow>

    <TableRow>

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address:"
            android:textSize="20sp"
            />
        <EditText
            android:id="@+id/addressID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            />
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/postalCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Postal Code:"
            android:textSize="20sp"
            />


        <EditText
            android:id="@+id/postalcodeID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            />


    </TableRow>


    <TableRow>
            <TextView
                android:id="@+id/telephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telephone:"
                android:textSize="20sp"
                />


            <EditText
                android:id="@+id/telephoneID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                />

        </TableRow>


    <TableRow>

        <TextView
            android:id="@+id/paymentMethod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Method:"
            android:textSize="20sp"
            />
        <EditText
            android:id="@+id/paymentMethodID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            />

    </TableRow>

<TableRow>
    <TextView
        android:id="@+id/cardNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Card Number:"
        android:textSize="20sp"
        />
    <EditText
        android:id="@+id/cardNumberID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        />

</TableRow>

<TableRow>


    <TextView
        android:id="@+id/cardType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Card Type"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/cardTypeID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        />

</TableRow>

    <TableRow>
    <TextView
        android:id="@+id/expiryDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expiry Date"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/expiryDateID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        />    </TableRow>
</TableLayout>

<LinearLayout android:weightSum="1">

    <Button
        android:id="@+id/customerInformationButton"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:onClick="custInfo"
        android:text="Complete your order"
        android:layout_weight="1" />
</LinearLayout>
</TableLayout>