<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgrounds"
    tools:context="com.example.fatih.orderpizza.Confirmation">

<LinearLayout android:weightSum="1">



    <TextView
        android:id="@+id/orderplaced"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginTop="20dp"
        android:text="Your Order is Placed"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />
</LinearLayout>
    <LinearLayout android:weightSum="1">

    <TextView
        android:id="@+id/thankyou"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:text="THANK YOU!"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />


</LinearLayout>


    <TableRow>
    <TextView
        android:id="@+id/pizzaTypeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pizza Type:"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/pizzaTypeData"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Pizza Type:"
        android:textSize="18sp" />
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/pizzaSizeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pizza Size:"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pizzaSizeData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pizza Size:"
            android:textSize="18sp" />

    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/toppingsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toppings:"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/toppingsData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toppings:"
            android:textSize="18sp" />
    </TableRow>

    <LinearLayout android:weightSum="1">
        <TextView
            android:id="@+id/customerInfoLabel"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:text="Customer Information"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="1" />
    </LinearLayout>

    <TableRow>
        <TextView
            android:id="@+id/nameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nameData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textSize="18sp" />

    </TableRow>

    <TableRow>
    <TextView
        android:id="@+id/addressLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address:"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/addressData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address:"
        android:textSize="18sp" />

    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/postalCodeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Postal Code"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/postalCodeData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Postal Code"
            android:textSize="18sp" />

    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/cardTypeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Card Type:"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cardTypeData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Card Type:"
            android:textSize="18sp" />

    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/cardNumberLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Card Number:"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cardNumberData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Card Number:"
            android:textSize="18sp" />
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/expiryDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expiry Date:"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/expiryDateData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expiry Date:"
            android:textSize="18sp" />

    </TableRow>

<TableRow>
    <TextView
        android:id="@+id/paymentMethodLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Method:"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/paymentMethodData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Method:"
        android:textSize="18sp" />
</TableRow>

    <TableRow>
    <TextView
        android:id="@+id/telephoneLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telephone:"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/telephoneData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telephone:"
        android:textSize="18sp" />

    </TableRow>


</TableLayout>
